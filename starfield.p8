--stars

function create_stars(count)
	stars={}
	for i=0,count do
		star={}
		init_star(star)
		add(stars,star)
	end
	return stars
end

function init_star(star)
	star.x=rnd(128)-64
	star.y=rnd(128)-64
	star.z=rnd(128)+15
end

function draw_stars()
	for s in all(stars) do
		z1_ratio=20/s.z
		z2_ratio=20/(s.z-speed)
		x1=s.x*z1_ratio+64	
		y1=s.y*z1_ratio+64
		x2=s.x*z2_ratio+64
		y2=s.y*z2_ratio+64
		
		line(x1,y1,x2,y2,star_color(s.z))
	end
end

function star_color(z)
	if (z>=90) then return 0 end 
	if (z>=75) then return 1 end
	if (z>=50) then return 6 end
	if (z>=15) then return 7 end
	return 15
end

function draw_ship()
	for i=0,ship.length do
		z_ratio=20/(ship.z-i)
		x=ship.x*z_ratio+64
		y=ship.y*z_ratio+64
		rectfill(
			x,y,
			x+ship.width,
			y+ship.height,
			5)
	end
end

function update_stars()
 for s in all(stars) do
		if (s.z<=10) then
			init_star(s)
		else
			s.z+=speed
		end
 end
end
