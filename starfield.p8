function _init()
	global={
		stars=create_stars(),
	}
end

function _update60()
 for s in all(global.stars) do
		if (s.z<=1) then
			s.z=rnd(128)
		else
			s.z-=1
		end
 end
end

function _draw()
	draw_stars()
end

function create_stars()
	stars={}
	for i=0,100 do
		star={}
		star.x=rnd(128)-64
		star.y=rnd(128)-64
		star.z=rnd(128)
		add(stars,star)
	end
	return stars
end

function draw_stars()
	rectfill(0,0,127,127,0)
	for s in all(global.stars) do
		z_ratio=20/s.z
		y_screen=s.y*z_ratio+64
		x_screen=s.x*z_ratio+64		
		pset(x_screen,y_screen,7)
	end
end

