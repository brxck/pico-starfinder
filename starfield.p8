--the stars my destination
--brxck's first pico-8

function _init()
	plane_size=128
	msg="the stars my destination"
	score=0
	speed=-1
	stars=create_stars(200)
	ship={
		x=60,
		y=60,
		z=25,
		length=2, 
		width=5, 
		height=3,
	}
	music(0)
end

function _update60()
	input()
	update_stars()
end

function _draw()
	cls()
	draw_stars()
	draw_ship()
	print_msg()
end

function print_msg(txt,color)
	print(msg,14,60,13)
	print(msg,14,59,7)
end

function input()
	if (btn(0)) then ship.x-=1 end
	if (btn(1)) then ship.x+=1 end
	if (btn(2)) then ship.y-=1 end
	if (btn(3)) then ship.y+=1 end
	if (btn(4)) then
		speed=min(speed+0.01,-0.5)
	elseif (btn(5)) then
		speed=max(speed-0.01,-5)
	end
end
